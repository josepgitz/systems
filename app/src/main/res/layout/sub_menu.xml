<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin_small"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/sub_menu_places"
            android:layout_height="@dimen/nav_icon_size"
            android:textColor="@color/colorWhite"
            android:background="@drawable/ic_home_white_24dp"
            android:layout_width="@dimen/nav_icon_size" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/sub_menu_queues"
            android:layout_height="@dimen/nav_icon_size"
            android:background="@drawable/ic_perm_contact_calendar_white_24dp"
            android:textColor="@color/colorWhite"
            android:layout_width="@dimen/nav_icon_size" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/sub_menu_alerts"
            android:layout_height="@dimen/nav_icon_size"
            android:background="@drawable/ic_alarm_black_24dp"
            android:textColor="@color/colorWhite"
            android:paddingEnd="@dimen/activity_horizontal_margin_small"
            android:layout_width="@dimen/nav_icon_size" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/more_info_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/no_notification_frame"
            android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="You currently don't have new messages"
                    android:textSize="30sp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content" />
                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/no_new_notification"
                    android:layout_height="match_parent" />


        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert Notifications"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"
            android:paddingLeft="16dp"
            android:textSize="16dp"
            android:textColor="@color/button_focused"/>
        <ListView
            android:id="@+id/alert_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

</LinearLayout>

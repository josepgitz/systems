<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="@dimen/activity_vertical_margin_small"
    android:paddingTop="@dimen/activity_horizontal_margin_small"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_business_details"
            android:layout_marginRight="8dp"
            android:layout_height="28dp"
            android:background="@color/colorLightGrey"
            android:textColor="@color/colorWhite"
            android:text="more details"
            android:textSize="12dp"
            android:drawableBottom="@color/colorWhite"
            android:layout_weight="1"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/button_visit"
            android:layout_marginHorizontal="8dp"
            android:layout_height="28dp"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:text="Visit Now"
            android:textSize="12dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/button_queue"
            android:layout_marginLeft="8dp"
            android:layout_height="28dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:text="Queue Now"
            android:textSize="12dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:layout_width="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/button_business_details_ptr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@android:drawable/arrow_up_float"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/button_visit_ptr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@android:drawable/arrow_up_float"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/button_queue_ptr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@android:drawable/arrow_up_float"/>

        </LinearLayout>
</LinearLayout>

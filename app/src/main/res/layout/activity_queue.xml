<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:id="@+id/confirm_queue_form"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/queue_status_statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are about to queue for:"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/confirm_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Name: "
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/progress_indicator_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlack"/>


            <TextView
                android:id="@+id/confirm_service_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Department: "
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorGrey"/>

            <TextView
                android:id="@+id/confirm_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name: "
                android:textColor="@color/colorGrey"/>

            <TextView
                android:id="@+id/confirm_company_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorGrey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/ic_bg_transparent_300x300">
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_horizontal_margin_small"
                    android:layout_marginTop="@dimen/activity_horizontal_margin_small"
                    android:background="@drawable/ic_bg_transparent_300x300">
                    >

                    <TextView
                        android:id="@+id/DatePickerLabel"
                        android:inputType="phone"
                        android:textSize="@dimen/input_text_size"
                        android:maxLines="1"
                        android:text="Choose date"
                        android:drawablePadding="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorDanger"
                        android:textColor="@color/colorPrimaryDark"
                        android:singleLine="true" />
                    <TextView
                        android:id="@+id/DatePicker"
                        android:inputType="phone"
                        android:text="Date"
                        android:drawablePadding="5dp"
                        android:textSize="@dimen/input_text_size"
                        android:drawableLeft="@drawable/ic_perm_contact_calendar_black1_24dp"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:background="@color/colorWhite"
                        android:textColor="@color/button_focused"
                        android:singleLine="true" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:padding="@dimen/activity_horizontal_margin_small"
                    android:background="@drawable/ic_bg_transparent_300x300">

                    <TextView
                        android:id="@+id/TimePickerLabel"
                        android:inputType="phone"
                        android:text="Time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/input_text_size"
                        android:textColorHint="@color/colorDanger"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:singleLine="true" />
                    <TextView
                        android:id="@+id/TimePicker"
                        android:inputType="phone"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                        android:background="@color/colorWhite"
                        android:text="Time"
                        android:textSize="@dimen/input_text_size"
                        android:layout_width="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/button_focused"
                        android:singleLine="true" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:padding="@dimen/activity_horizontal_margin_small"
                android:background="@drawable/ic_bg_transparent_300x300">

                <TextView
                    android:id="@+id/service_queue_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Queue size: 0"
                    android:drawableLeft="@drawable/ic_people_black_24dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/service_queue_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Queue speed: 0"
                    android:drawableLeft="@drawable/ic_av_timer_black_24dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
            <Button
                android:id="@+id/button_confirm_queue"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="Confirm"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_queue_play_next_white_24dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/button_Cancel_queue"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:padding="@dimen/activity_vertical_margin_small"
                android:text="Cancel"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"
                android:drawableLeft="@drawable/ic_queue_play_next_white_24dp"
                android:textStyle="bold" />
</LinearLayout>
    </LinearLayout>
